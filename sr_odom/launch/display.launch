<launch>  
    <arg name="model" />  
    <arg name="gui" default="False" />  
    <param name="robot_description" textfile="$(arg model)" />  
    <param name="use_gui" value="$(arg gui)"/>  
    <param name="odom_frame" value="odom"/>
    <param name="map_frame" value="map"/>
    <node pkg="tf" type="static_transform_publisher" name="laser_static_tf_publisher" args="0.14 0 0.06 0 0 0 1 base_link laser 50"/>
    <node name="serial_publisher" pkg="sr_odom" type="sr_odom_serial_publisher" output="screen" />
    <node name="odom_publisher" pkg="sr_odom" type="sr_odom_odom_publisher" output="screen" />
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />  
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />  
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find urdf_tutorial)/urdf.rviz" required="true" />  
</launch> 

